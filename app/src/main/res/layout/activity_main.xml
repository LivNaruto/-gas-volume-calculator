<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标况体积和参比体积计算器"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/volumeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入采样体积(V)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/pressureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入环境压力(P)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/temperatureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入环境温度(T)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算标况体积和参比体积"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算结果将在此显示"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
